<section class="tab {{tab.cssClass}}" data-group="primary" data-tab="advancedOptions">
  <!-- Options (now two columns, aligned with criteria rows) -->
  <div class="criteria-row options-row">
    <!-- Quantity Options Column -->
    <div class="options-column">
      <h5>{{localize "pf2eMerchantMaker.window.quantityOptions"}}</h5>
      <p class="option-tip">{{localize "pf2eMerchantMaker.window.quantityTip"}}</p>

      <div class="option-row">
        <label for="quantity-mode-set">
          <input type="radio" id="quantity-mode-set" name="quantity-mode" value="set" checked>
          {{localize "pf2eMerchantMaker.window.setQuantity"}}
        </label>
        <input type="number" name="set-quantity" id="set-quantity" min="1" max="99" value="1">
      </div>

      <div class="option-row">
        <label for="quantity-mode-random">
          <input type="radio" id="quantity-mode-random" name="quantity-mode" value="random">
          {{localize "pf2eMerchantMaker.window.randomQuantity"}}
        </label>
        <div class="range-inputs">
          <input type="number" name="random-quantity-min" id="random-quantity-min" min="1" max="99" value="1">
          <span class="range-sep">&ndash;</span>
          <input type="number" name="random-quantity-max" id="random-quantity-max" min="1" max="99" value="10">
        </div>
      </div>
      
    </div>

    <!-- Item Amount Options Column -->
    <div class="options-column">
      <h5>{{localize "pf2eMerchantMaker.window.itemAmounts"}}</h5>
      <p class="option-tip">{{localize "pf2eMerchantMaker.window.amountTip"}}</p>

      <div class="option-row">
        <label for="amount-mode-all">
          <input type="radio" id="amount-mode-all" name="amount-mode" value="all" checked>
          {{localize "pf2eMerchantMaker.window.allAmount"}}
        </label>
      </div>

      <div class="option-row">
        <label for="amount-mode-set">
          <input type="radio" id="amount-mode-set" name="amount-mode" value="set">
          {{localize "pf2eMerchantMaker.window.setAmount"}}
        </label>
        <input type="number" name="set-amount" id="set-amount" min="1" value="1">
      </div>

      <div class="option-row">
        <label for="amount-mode-random">
          <input type="radio" id="amount-mode-random" name="amount-mode" value="random">
          {{localize "pf2eMerchantMaker.window.randomAmount"}}
        </label>
        <div class="range-inputs">
          <input type="number" name="random-amount-min" id="random-amount-min" min="1" value="1">
          <span class="range-sep">&ndash;</span>
          <input type="number" name="random-amount-max" id="random-amount-max" min="1" value="1">
        </div>
      </div>

    </div>
  </div>

  <hr />
</section>
